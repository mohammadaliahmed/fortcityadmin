                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="3dp">


                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="25dp"

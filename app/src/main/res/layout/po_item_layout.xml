<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1) "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text=""
            android:layout_marginRight="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="20dp"
            android:hint=""
            android:textSize="11sp" />


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="Rs 0"
            android:textColor="#000" />
    </RelativeLayout>

    <RelativeLayout

        android:id="@+id/edited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main"
        android:background="#fff"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="#aaa" />

        <TextView
            android:id="@+id/quantityPurchased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="Qty purchased"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/outOfStockQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quantityPurchased"
            android:layout_marginLeft="20dp"
            android:text="Out of stock"
            android:textColor="@color/colorRed"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/newCostPrice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/outOfStockQty"
            android:layout_marginLeft="20dp"
            android:text="Qty purchased"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/puchaseTotal"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/newCostPrice"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="Purchase total"
            android:textColor="@color/colorGreen"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
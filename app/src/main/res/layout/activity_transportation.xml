<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.appsinventiv.toolsbazzaradmin.Activities.Accounts.ExpensesAndRevenue.Transportation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/officeTransportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Office Transportation"
                android:inputType="number"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/staffTransportation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Staff Transportation"
                android:inputType="number"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/officeFuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Office fuel"
                android:inputType="number"

                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/staffFuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Staff fuel"
                android:inputType="number"

                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Shipping"
                android:inputType="number"

                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Delivery"
                android:inputType="number"

                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorRed"
        android:text="Save"
        android:textColor="@color/colorWhite" />
</RelativeLayout>

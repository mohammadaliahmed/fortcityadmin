<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">


            <ImageView
                android:id="@+id/delete"
                android:layout_width="20dp"
                android:visibility="gone"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:src="@drawable/ic_cancel" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/image"
                android:lines="1"
                android:text="Rosepair Oregano Leaves"
                android:textColor="#000" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/image"
                android:text="12 gm"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/wholesalePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subtitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/image"
                android:text="Rs 85"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/retailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/image"
                android:text="Rs 85"
                android:textSize="11sp"
                android:visibility="gone" />


            <Switch
                android:id="@+id/switchh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:text="Pending/Approved "
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#d9d9d9"></View>
        </RelativeLayout>

        <TextView
            android:id="@+id/vendorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:lines="1"
            android:padding="5dp"
            android:text="Vendor: Mobile supplier"
            android:textColor="#000" />
    </LinearLayout>


</android.support.v7.widget.CardView>
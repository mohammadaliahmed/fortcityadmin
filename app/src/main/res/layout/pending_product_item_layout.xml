<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="sdfdsfs"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quantity"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginLeft="80dp"
                android:text="sdfs"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/orderIds"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quantity"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="100dp"
                android:text="sdfs"
                android:textSize="10sp" />

            <TextView

                android:id="@+id/costPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/orderIds"
                android:layout_marginLeft="80dp"
                android:text="sdfs" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/costPrice"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="80dp"
                android:text="sdfs"
                android:textColor="#000" />

            <Switch
                android:id="@+id/purchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Pending" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/edited"
            android:visibility="gone"
            android:background="#fff"
            android:layout_below="@id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#aaa"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/quantityPurchased"
                android:text="Qty purchased"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="80dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/outOfStockQty"
                android:text="Out of stock"

                android:textSize="12sp"
                android:textColor="@color/colorRed"
                android:layout_marginLeft="80dp"
                android:layout_below="@id/quantityPurchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/newCostPrice"
                android:text="Qty purchased"
                android:textSize="12sp"

                android:layout_marginLeft="80dp"
                android:layout_below="@id/outOfStockQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/puchaseTotal"
                android:text="Purchase total"
                android:textSize="12sp"

                android:layout_marginLeft="80dp"
                android:layout_below="@id/newCostPrice"
                android:layout_width="wrap_content"
                android:textColor="@color/colorGreen"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
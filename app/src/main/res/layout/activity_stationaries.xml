<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/officeStationaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Office Stationaires"
                android:inputType="number"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/staffStationaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Staff Stationaries"
                android:inputType="number"
                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/advertising"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Advertising / Brochures / Marketing"
                android:inputType="number"

                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/billBooksPrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="BillBooksPrint"
                android:inputType="number"

                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/packingMaterial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Packing Material (Boxes /  Bags)"
                android:inputType="number"

                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="5dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/businessCardPrint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Business Card Print"
                android:inputType="number"

                android:textSize="13sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorRed"
        android:text="Save"
        android:textColor="@color/colorWhite" />
</RelativeLayout>
